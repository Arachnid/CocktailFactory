<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView android:id="@+id/drink_image"
	android:scaleType="fitCenter" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:layout_weight="3"
	android:padding="3sp"/>

    <LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="80sp"
	android:layout_weight="2" android:gravity="center_vertical">
    <TextView android:id="@+id/drink_name" android:textSize="16sp"
	android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <TextView android:id="@+id/drink_desc" android:textSize="10sp"
	android:layout_width="fill_parent" android:layout_height="wrap_content" />
	</LinearLayout>

</LinearLayout>